<% if current_user %>
  <h1>Hello <%= current_user.username %></h1>

  <%= form_tag search_path, method: :get do %>
    <%= label_tag "Find destination by city" %>
    <%= text_field_tag :city_search, params[:city_search], class: "form-control" %>
    <%= submit_tag "Let's go!", class: "btn" %>
  <% end %>

  <% if @destinations != nil %>
    <h3>Search Results</h3>
    <% @destinations.each do |destination| %>
      <li>
        <%= link_to "#{destination["city"]}, #{destination["country"]}", destination_path(destination["id"]) %>
      </li>
    <% end %>
  <% end %>
  <% else %>
  <h1>Hello Stranger</h1>
<% end %>

